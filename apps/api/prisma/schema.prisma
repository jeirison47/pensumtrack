generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  displayName  String
  auth0Id      String?  @unique
  authProvider String   @default("local")
  isActive     Boolean  @default(true)
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  settings StudentProfile?
}

model University {
  id        String   @id @default(cuid())
  name      String
  shortName String   // Ej: ITLA, UASD, PUCMM
  country   String   @default("DO")
  logoUrl   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  careers Career[]
}

model Career {
  id                String    @id @default(cuid())
  name              String
  universityId      String
  totalCredits      Int
  durationSemesters Int
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())

  university University       @relation(fields: [universityId], references: [id])
  subjects   Subject[]
  profiles   StudentProfile[]
}

model Subject {
  code          String   @id
  name          String
  credits       Int
  semester      Int
  area          String?
  careerId      String
  prerequisites String[] // c칩digos de materias requeridas
  corequisites  String[] // c칩digos de materias simult치neas
  createdAt     DateTime @default(now())

  career          Career           @relation(fields: [careerId], references: [id])
  studentSubjects StudentSubject[]
}

model StudentProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  careerId        String
  currentSemester Int      @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User             @relation(fields: [userId], references: [id])
  career        Career           @relation(fields: [careerId], references: [id])
  subjects      StudentSubject[]
  preselections Preselection[]
}

model StudentSubject {
  id         String        @id @default(cuid())
  profileId  String
  subjectCode String
  status     SubjectStatus @default(PENDING)
  grade      Float?
  period     String?
  updatedAt  DateTime      @updatedAt

  subject Subject        @relation(fields: [subjectCode], references: [code])
  profile StudentProfile @relation(fields: [profileId], references: [id])

  @@unique([profileId, subjectCode])
}

model Preselection {
  id        String   @id @default(cuid())
  profileId String
  period    String
  subjects  String[] // c칩digos de materias preseleccionadas
  updatedAt DateTime @updatedAt

  profile StudentProfile @relation(fields: [profileId], references: [id])

  @@unique([profileId, period])
}

enum SubjectStatus {
  PENDING
  IN_PROGRESS
  PASSED
  FAILED
  PRESELECTED
}
