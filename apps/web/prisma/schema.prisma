generator client {
  provider      = "prisma-client-js"
  output        = "../lib/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  displayName  String
  auth0Id      String?  @unique
  authProvider String   @default("local")
  isActive     Boolean  @default(true)
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  profiles StudentProfile[]
}

model University {
  id        String   @id @default(cuid())
  name      String
  shortName String
  country   String   @default("DO")
  logoUrl   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  careers Career[]
}

model Career {
  id                String    @id @default(cuid())
  name              String
  universityId      String
  totalCredits      Int
  durationSemesters Int
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())

  university University       @relation(fields: [universityId], references: [id])
  subjects   Subject[]
  profiles   StudentProfile[]
}

model Subject {
  code          String
  name          String
  credits       Int
  semester      Int
  area          String?
  careerId      String
  prerequisites String[]
  corequisites  String[]
  createdAt     DateTime @default(now())

  career          Career           @relation(fields: [careerId], references: [id])
  studentSubjects StudentSubject[]

  @@id([code, careerId])
}

model StudentProfile {
  id              String   @id @default(cuid())
  userId          String
  careerId        String
  currentSemester Int      @default(1)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User             @relation(fields: [userId], references: [id])
  career        Career           @relation(fields: [careerId], references: [id])
  subjects      StudentSubject[]
  preselections Preselection[]

  @@unique([userId, careerId])
}

model StudentSubject {
  id          String        @id @default(cuid())
  profileId   String
  subjectCode String
  careerId    String
  status      SubjectStatus @default(PENDING)
  grade       Float?
  period      String?
  updatedAt   DateTime      @updatedAt

  subject Subject        @relation(fields: [subjectCode, careerId], references: [code, careerId])
  profile StudentProfile @relation(fields: [profileId], references: [id])

  @@unique([profileId, subjectCode])
}

model Preselection {
  id        String             @id @default(cuid())
  profileId String
  label     String             @default("")
  startDate DateTime?
  endDate   DateTime?
  status    PreselectionStatus @default(OPEN)
  subjects  String[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  profile StudentProfile @relation(fields: [profileId], references: [id])

  @@unique([profileId, label])
}

enum PreselectionStatus {
  OPEN
  CONFIRMED
  CLOSED
}

enum SubjectStatus {
  PENDING
  IN_PROGRESS
  PASSED
  FAILED
  PRESELECTED
}
